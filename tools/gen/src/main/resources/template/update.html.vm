<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" type="text/css" media="screen" href="../../css/bootstrap.min.css">
	<link rel="stylesheet" href="../../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../../lib/layui-formSelects/dist/formSelects-v4.css">
	<link rel="stylesheet" href="../../css/your_style.css" media="all" />
</head>
<body>
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<form class="form-horizontal layui-form" onsubmit="return false" id="form">
		<fieldset>
			<input type="hidden" id="id" name="id">
			#foreach($column in $columns)
				#if($column.columnName != "id")
				<div class='form-group'>
					<label class='col-md-2 control-label'>${column.comments}</label>
					<div class='col-md-2'>
						<input class='form-control' placeholder='输入${column.comments}' type='text' name='${column.attrname}' id='${column.attrname}' data-bv-notempty='true' data-bv-notempty-message='输入${column.comments} 不能为空'>
					</div>
				</div>
					#end
			#end

			<div class="form-actions">
				<div class="row" align="center">
					<div class="col-md-12">
						<button class="btn btn-primary returnBt" onclick="location.href='${classname}List.html'">返回</button>
						<button class="btn btn-primary returnBt" type="submit" onclick="update()">
							<i class="fa fa-save"></i> 更新
						</button>
					</div>
				</div>
			</div>

		</fieldset>
	</form>
</div>
<script type="text/javascript" src="../../js/libs/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="../../js/jq.js"></script>
<script type="text/javascript" src="../../js/plugin/bootstrapvalidator/bootstrapValidator.min.js"></script>
<script type="text/javascript" src="../../js/common.js"></script>
<script type="text/javascript" src="../../layui/layui.js"></script>
<script type="text/javascript" src="../../js/dict.js"></script>
<script type="text/javascript">
	layui.use(['layer','laydate'], function(){
		var layer = layui.layer;
	});

	initData();
	function initData(){
		var id = getUrlParam("id");
		if( !isEmpty(id)){
			$.ajax({
				type : 'get',
				url : '/${pathName}/'+id,
				async : false,
				success : function(data) {
					#foreach($column in $columns)
						$('#${column.attrname}').val(data.${column.attrname});
					#end
				}
			});
		}
	}

	setUploadSelector("#link");
	layui.use('form', function() {
		var form = layui.form;
	});

	function update() {

		$('#form').bootstrapValidator();
		var bootstrapValidator = $("#form").data('bootstrapValidator');
		bootstrapValidator.validate();
		if(!bootstrapValidator.isValid()){
			return;
		}

		if($("#link").val() == "" || $("#link").val() == null || $("#link").val() == undefined){
			layer.msg("图片未上传", {shift: -1, time: 1000}, function(){

			});
			return;
		}
		var formdata = $("#form").serializeObject();

		$.ajax({
			type : 'put',
			url : '/${pathName}',
			contentType: "application/json; charset=utf-8",
			data : JSON.stringify(formdata),
			success : function(data) {
				layer.msg("修改成功", {shift: -1, time: 1000}, function(){
					location.href = "${classname}List.html}";
				});
			}
		});
	}

</script>
</body>
</html>
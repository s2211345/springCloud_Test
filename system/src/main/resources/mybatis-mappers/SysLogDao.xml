<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lwc.test.dao.sys.SysLogDao">


    <resultMap type="com.lwc.test.model.sys.SysLog" id="sysLogMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="operation" column="operation"/>
        <result property="flag" column="flag"/>
        <result property="errMsg" column="err_msg"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List" >
		l.id,
		l.user_id,
		l.operation,
		l.flag,
		l.err_msg,
		l.create_time,
		l.update_time    </sql>

	<sql id="where">
		<if test="userId != null and userId != ''">AND l.`user_id` = #{userId}</if>
		<if test="operation != null and operation != ''">AND l.`operation` = #{operation}</if>
		<if test="flag != null">AND l.`flag` = #{flag}</if>
		<if test="errMsg != null and errMsg != ''">AND l.`err_msg` = #{errMsg}</if>
		<if test="createTime != null and createTime != ''">AND l.`create_time` = #{createTime}</if>
		<if test="updateTime != null and updateTime != ''">AND l.`update_time` = #{updateTime}</if>
	</sql>

	<select id="queryById" resultType="com.lwc.test.view.sys.response.SysLogRespVO">
		select
		<include refid="Base_Column_List" />
		from sys_log l
		where l.id = #{value}
	</select>

	<select id="queryByReq" resultType="com.lwc.test.view.sys.response.SysLogRespVO">
		select
		<include refid="Base_Column_List" />
		from sys_log l
		<where>
			<include refid="where" />
		</where>
		limit 1
	</select>

	<select id="listByReq" resultType="com.lwc.test.view.sys.response.SysLogRespVO" parameterType="com.lwc.test.view.sys.request.SysLogReqVO">
		select
		<include refid="Base_Column_List" />
		from sys_log l
		<where>
			<include refid="where" />
		</where>
      <choose>
        <when test="sidx != null and sidx.trim() != ''">
            order by ${sidx} ${order}
        </when>
				<otherwise>
            order by l.createTime desc
				</otherwise>
      </choose>
		<if test="page != null and page != null">
			limit #{page}, #{limit}
		</if>
	</select>

 	<select id="countByReq" resultType="int">
		select count(*) from sys_log l
		<where>
			<include refid="where" />
		</where>
	</select>

	<insert id="save" parameterType="com.lwc.test.model.sys.SysLog">
		<selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into sys_log
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				`id`,
		  	</if>
			<if test="userId != null">
				`user_id`,
		  	</if>
			<if test="operation != null">
				`operation`,
		  	</if>
			<if test="flag != null">
				`flag`,
		  	</if>
			<if test="errMsg != null">
				`err_msg`,
		  	</if>
			<if test="createTime != null">
				`create_time`,
		  	</if>
			<if test="updateTime != null">
				`update_time`,
		  	</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="userId != null">
				#{userId},
			</if>
			<if test="operation != null">
				#{operation},
			</if>
			<if test="flag != null">
				#{flag},
			</if>
			<if test="errMsg != null">
				#{errMsg},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="updateTime != null">
				#{updateTime},
			</if>
		</trim>
	</insert>

	<insert id="batchSave" parameterType="com.lwc.test.model.sys.SysLog">
		insert into sys_log
		(
			`id`, 
			`user_id`, 
			`operation`, 
			`flag`, 
			`err_msg`, 
			`create_time`, 
			`update_time`
		)
		values
		<foreach collection="list" item="item" index="index" separator=",">
			(
			#{item.id}, 
			#{item.userId}, 
			#{item.operation}, 
			#{item.flag}, 
			#{item.errMsg}, 
			#{item.createTime}, 
			#{item.updateTime}
			)
		</foreach>
	</insert>

	<update id="update" parameterType="com.lwc.test.model.sys.SysLog">
		update sys_log
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="operation != null">`operation` = #{operation}, </if>
			<if test="flag != null">`flag` = #{flag}, </if>
			<if test="errMsg != null">`err_msg` = #{errMsg}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from sys_log where id = #{value}
	</delete>

	<delete id="batchDelete">
		delete from sys_log where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>